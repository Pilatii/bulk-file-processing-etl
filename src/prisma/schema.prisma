generator client {
   provider     = "prisma-client-js"
   moduleFormat = "cjs"
}

datasource db {
   provider = "postgresql"
}

model User {
   id      Int    @id @default(autoincrement())
   name    String
   country String
   email   String @unique
}

model Product {
   id          Int     @id @default(autoincrement())
   name        String
   description String
   price       Decimal
}

model Job {
   id            Int       @id @default(autoincrement())
   status        JobStatus @default(PENDING)
   progress      Int       @default(0)
   totalRows     Int       @default(0)
   errorMesage   String?
   errorFilePath String?
   entity        JobEntity
   createdAt     DateTime  @default(now())
   updatedAt     DateTime  @updatedAt
}

enum JobStatus {
   PENDING
   QUEUED
   VALIDATING
   PROCESSING
   COMPLETED
   FAILED
   RETRYING
}

enum JobEntity {
   USER
   PRODUCT
}
